<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:gravity="center_horizontal"
			  android:orientation="vertical"
			  android:paddingLeft="16dp"
			  android:paddingRight="16dp"
			  android:paddingBottom="8dp">

	<LinearLayout
		android:id="@+id/layout_soldiers_level_1"
		android:layout_weight="1"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:gravity="center_vertical"
		android:orientation="horizontal"
		android:paddingLeft="16dp"
		android:paddingRight="16dp"/>

	<LinearLayout
		android:id="@+id/layout_soldiers_level_2"
		android:layout_weight="1"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:gravity="center_vertical"
		android:orientation="horizontal"
		android:paddingLeft="16dp"
		android:paddingRight="16dp"/>

	<LinearLayout
		android:id="@+id/layout_soldiers_level_3"
		android:layout_weight="1"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:gravity="center_vertical"
		android:orientation="horizontal"
		android:paddingLeft="16dp"
		android:paddingRight="16dp"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<Button
			android:id="@+id/button_kill"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="@string/kill_string"
			android:paddingRight="8dp"/>

		<Button
			android:id="@+id/button_halt"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="@string/halt"
			android:paddingLeft="8dp"/>

	</LinearLayout>

</LinearLayout>